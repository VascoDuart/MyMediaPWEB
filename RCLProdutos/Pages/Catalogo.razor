@page "/catalogo"
@using Microsoft.AspNetCore.Components.Web
@rendermode Microsoft.AspNetCore.Components.Web.RenderMode.InteractiveServer
@using RCLAPI.Services
@using RCLAPI.DTOs
@inject IProdutoService ProdutoService

<PageTitle>Catálogo de Multimédia</PageTitle>

<div class="container mt-4">
    <h3 class="mb-4">O Nosso Catálogo</h3>

    <div class="btn-group mb-4" role="group">
        <button type="button" class="btn btn-outline-secondary @(filtro == "Todos" ? "active" : "")" @onclick='() => Filtrar("Todos")'>Todos</button>
        <button type="button" class="btn btn-outline-secondary @(filtro == "Filmes" ? "active" : "")" @onclick='() => Filtrar("Filmes")'>Filmes</button>
        <button type="button" class="btn btn-outline-secondary @(filtro == "Música" ? "active" : "")" @onclick='() => Filtrar("Música")'>Música</button>
        <button type="button" class="btn btn-outline-secondary @(filtro == "Acessórios" ? "active" : "")" @onclick='() => Filtrar("Acessórios")'>Acessórios</button>
        <button type="button" class="btn btn-outline-secondary @(filtro == "Letras" ? "active" : "")" @onclick='() => Filtrar("Letras")'>Letras</button>
    </div>

    @if (produtos == null) {
        <div class="d-flex justify-content-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">A carregar...</span>
            </div>
        </div>
    }
    else if (!produtos.Any()) {
        <div class="alert alert-info">Não foram encontrados produtos disponíveis.</div>
    }
    else {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var produto in produtosFiltrados ?? Array.Empty<ProdutoDTO>()) {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="detalhes/@produto.ProdutoId" class="text-decoration-none text-dark">@produto.Titulo</a>
                            </h5>
                            <span class="badge bg-info text-dark mb-2">@produto.CategoriaNome</span>
                            <p class="card-text text-muted">Preço: @produto.PrecoFinal.ToString("C")</p>
                        </div>
                        <div class="card-footer bg-white border-top-0">
                            <button class="btn btn-outline-primary w-100">Adicionar ao Carrinho</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private IEnumerable<ProdutoDTO>? produtos;
    private IEnumerable<ProdutoDTO>? produtosFiltrados;
    private string filtro = "Todos";

    protected override async Task OnInitializedAsync() {
        produtos = await ProdutoService.GetProdutosAtivos();
        produtosFiltrados = produtos;
    }

    private void Filtrar(string categoria) {
        filtro = categoria;
        if (categoria == "Todos") {
            produtosFiltrados = produtos;
        }
        else {
            produtosFiltrados = produtos?.Where(p => p.CategoriaNome.Equals(categoria, StringComparison.OrdinalIgnoreCase));
        }
        StateHasChanged();
    }
}