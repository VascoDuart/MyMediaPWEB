@page "/fornecedor/meus-produtos"
@using RCLComum.Models
@using RCLAPI.Services
@inject IProdutoService ProdutoService
@inject NavigationManager NavManager

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Os Meus Produtos</h2>
        @* Botão "Novo Produto" removido daqui *@
    </div>

    @if (produtos == null)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">A carregar...</span>
            </div>
        </div>
    }
    else if (!produtos.Any())
    {
        <div class="alert alert-info">Ainda não tem produtos registados.</div>
    }
    else
    {
        <table class="table table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Título</th>
                    <th>Categoria</th>
                    <th>Preço</th>
                    <th>Stock</th>
                    <th>Estado</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var prod in produtos)
                {
                    <tr>
                        <td>@prod.Titulo</td>
                        <td>@prod.CategoriaNome</td>
                        <td>@prod.PrecoFinal.ToString("C")</td>
                        <td>@prod.Stock</td>
                        <td>
                            <span class="badge @GetBadgeClass(prod.Estado)">
                                @(prod.Estado ?? "Pendente")
                            </span>
                        </td>
                        <td>
                            <button class="btn btn-primary btn-sm me-2" @onclick="() => Editar(prod.ProdutoId)">Editar</button>
                            <button class="btn btn-danger btn-sm" @onclick="() => ConfirmarEliminar(prod.ProdutoId)">Eliminar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@code {
    private IEnumerable<ProdutoDTO>? produtos;

    protected override async Task OnInitializedAsync() => await CarregarProdutos();

    private async Task CarregarProdutos() => produtos = await ProdutoService.GetMeusProdutosAsync();

    private void Editar(int id) => NavManager.NavigateTo($"/editar-produto/{id}");

    private async Task ConfirmarEliminar(int id)
    {
        if (await ProdutoService.EliminarProdutoAsync(id)) await CarregarProdutos();
    }

    private string GetBadgeClass(string? estado)
    {
        // Tratamento de nulo para evitar NullReferenceException
        return (estado ?? "Pendente").ToLower() switch
        {
            "ativo" => "bg-success",
            "pendente" => "bg-warning text-dark",
            "rejeitado" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}