@page "/register"
@using Microsoft.AspNetCore.Components.Forms
@using RCLComum.Models
@using RCLComum.Services
@inject AuthService AuthService
@inject NavigationManager NavManager

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title text-center">Criar Nova Conta</h3>

                    <EditForm Model="registerModel" OnValidSubmit="HandleRegister">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label class="form-label">Nome Completo</label>
                            <InputText @bind-Value="registerModel.NomeCompleto" class="form-control" />
                            <ValidationMessage For="@(() => registerModel.NomeCompleto)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <InputText @bind-Value="registerModel.Email" class="form-control" />
                            <ValidationMessage For="@(() => registerModel.Email)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <InputText @bind-Value="registerModel.Password" type="password" class="form-control" />
                            <ValidationMessage For="@(() => registerModel.Password)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Confirmar Password</label>
                            <InputText @bind-Value="registerModel.ConfirmPassword" type="password" class="form-control" />
                            <ValidationMessage For="@(() => registerModel.ConfirmPassword)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Registar como:</label>
                            <InputSelect @bind-Value="registerModel.Role" class="form-select">
                                <option value="Cliente">Cliente</option>
                                <option value="Fornecedor">Fornecedor</option>
                            </InputSelect>
                            <div class="form-text text-info">
                                <i class="bi bi-info-circle"></i> Os fornecedores aguardam aprovação do administrador.
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(errorMessage)) {
                            <div class="alert alert-danger">@errorMessage</div>
                        }
                        @if (!string.IsNullOrEmpty(successMessage)) {
                            <div class="alert alert-success">@successMessage</div>
                        }

                        <button type="submit" class="btn btn-success w-100" disabled="@isSubmitting">
                            @if (isSubmitting) {
                                <span>A processar...</span>
                            }
                            else {

                                <span>Registar</span>
                            }
                        </button>
                    </EditForm>

                    <div class="mt-3 text-center">
                        <a href="login">Já tem conta? Entre aqui.</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private RegisterDTO registerModel = new();
    private string? errorMessage;
    private string? successMessage;
    private bool isSubmitting = false;

    private async Task HandleRegister() {
        isSubmitting = true;
        errorMessage = null;
        successMessage = null;

        var result = await AuthService.RegisterAsync(registerModel);

        if (result.Sucedido) {
            successMessage = "Registo efetuado! Se for fornecedor, aguarde ativação.";
            await Task.Delay(2000);
            NavManager.NavigateTo("/login");
        }
        else {
            errorMessage = result.Erro ?? "Ocorreu um erro no registo.";
        }
        isSubmitting = false;
    }
}