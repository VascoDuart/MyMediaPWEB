@using RCLComum.Services
@inject CarrinhoService CarrinhoService
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">ProdutosBlazor</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3 mb-2">
                    <div class="nav-link text-white-50">
                        <span class="bi bi-person-check-fill" aria-hidden="true"></span>
                        <span>Perfil: @(context.User.FindFirst("role")?.Value ?? "Cliente")</span>
                    </div>
                </div>

                @if (context.User.Claims.Any(c => c.Type == "role" && c.Value == "Fornecedor"))
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="produtos/novo">
                            <span class="bi bi-plus-circle-fill" aria-hidden="true"></span> Vender Produto
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="fornecedor/meus-produtos">
                            <span class="bi bi-box-seam-fill" aria-hidden="true"></span> Meus Produtos
                        </NavLink>
                    </div>
                }

                @if (context.User.Claims.Any(c => c.Type == "role" && c.Value == "Cliente") ||
                                !context.User.Claims.Any(c => c.Type == "role"))
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="catalogo">
                            <span class="bi bi-list-nested" aria-hidden="true"></span> Catálogo
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="historico">
                            <span class="bi bi-clock-history" aria-hidden="true"></span> O meu Histórico
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="carrinho">
                            <span class="bi bi-cart-fill" aria-hidden="true"></span> Carrinho
                            @if (CarrinhoService.Itens.Any())
                            {
                                <span class="badge bg-danger ms-2">@CarrinhoService.Itens.Sum(i => i.Quantidade)</span>
                            }
                        </NavLink>
                    </div>
                }

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="logout">
                        <span class="bi bi-box-arrow-right-nav-menu" aria-hidden="true"></span> Sair
                    </NavLink>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="catalogo">
                        <span class="bi bi-list-nested" aria-hidden="true"></span> Catálogo
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="login">
                        <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Entrar
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="register">
                        <span class="bi bi-person-plus-nav-menu" aria-hidden="true"></span> Registar
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    protected override void OnInitialized()
    {
        CarrinhoService.OnCarrinhoAlterado += StateHasChanged;
    }

    public void Dispose()
    {
        CarrinhoService.OnCarrinhoAlterado -= StateHasChanged;
    }
}