@page "/gestao/relatorios"
@using MyMedia.Data.Models
@using Microsoft.EntityFrameworkCore
@inject MyMedia.Data.ApplicationDbContext DbContext
@attribute [Authorize(Roles = "Administrador")]
@rendermode InteractiveServer

<h3 class="mb-4">Relatório de Vendas e Faturamento</h3>

@if (resumoVendas == null)
{
    <div class="spinner-border text-primary" role="status"></div>
}
else
{
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white shadow">
                <div class="card-body text-center">
                    <h6 class="card-title text-uppercase small">Faturamento Total</h6>
                    <h2 class="fw-bold">@totalFaturado.ToString("C")</h2>
                    <i class="bi bi-cash-stack fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white shadow">
                <div class="card-body text-center">
                    <h6 class="card-title text-uppercase small">Encomendas Pagas</h6>
                    <h2 class="fw-bold">@totalEncomendasPagas</h2>
                    <i class="bi bi-check-circle fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white shadow">
                <div class="card-body text-center">
                    <h6 class="card-title text-uppercase small">Ticket Médio</h6>
                    <h2 class="fw-bold">@((totalEncomendasPagas > 0 ? totalFaturado / totalEncomendasPagas : 0).ToString("C"))</h2>
                    <i class="bi bi-graph-up-arrow fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="bi bi-trophy"></i> Top Produtos (por Receita)</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Produto</th>
                                <th class="text-center">Qtd. Vendida</th>
                                <th class="text-end">Total Gerado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in resumoVendas)
                            {
                                <tr>
                                    <td>@item.Titulo</td>
                                    <td class="text-center">@item.QuantidadeTotal</td>
                                    <td class="text-end fw-bold">@item.ReceitaTotal.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-calendar3"></i> Informação</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted small">
                        Este relatório contabiliza apenas as encomendas com estado <strong>"Pago"</strong> ou <strong>"Expedido"</strong>.
                    </p>
                    <hr />
                    <div class="alert alert-warning py-2 small">
                        <i class="bi bi-info-circle"></i> Os valores baseiam-se no preço unitário gravado e no ValorTotal da encomenda.
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<VendaResumo>? resumoVendas;
    private decimal totalFaturado;
    private int totalEncomendasPagas;

    protected override async Task OnInitializedAsync()
    {
        await CarregarDados();
    }

    private async Task CarregarDados()
    {
        var encomendasValidas = await DbContext.Encomendas
            .Where(e => e.EstadoEncomenda == "Pago" || e.EstadoEncomenda == "Expedido")
            .ToListAsync();

        totalEncomendasPagas = encomendasValidas.Count;
        totalFaturado = (decimal)encomendasValidas.Sum(e => e.ValorTotal);

        resumoVendas = await DbContext.ItensEncomenda
            .Where(ie => ie.Encomenda.EstadoEncomenda == "Pago" || ie.Encomenda.EstadoEncomenda == "Expedido")
            .GroupBy(ie => ie.Produto.Titulo)
            .Select(g => new VendaResumo
            {
                Titulo = g.Key,
                QuantidadeTotal = g.Sum(x => x.Quantidade),
                ReceitaTotal = (decimal)g.Sum(x => x.Quantidade * x.PrecoVendaUnitario)
            })
            .OrderByDescending(r => r.ReceitaTotal)
            .Take(10)
            .ToListAsync();
    }

    public class VendaResumo
    {
        public string Titulo { get; set; } = "";
        public int QuantidadeTotal { get; set; }
        public decimal ReceitaTotal { get; set; }
    }
}