@page "/gestao/produtos"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using MyMedia.Data
@using MyMedia.Data.Models
@using MyMedia.API.DTOs
@inject ApplicationDbContext DbContext
@inject IJSRuntime JS
@attribute [Authorize(Roles = "Administrador, Funcionário")]

<h3 class="mb-4">Gestão de Catálogo</h3>

<div class="row g-3 mb-4 p-3 bg-light border rounded">
    <div class="col-md-4">
        <label class="form-label fw-bold">Pesquisa</label>
        <input type="text" class="form-control" placeholder="Título..." @bind="filtroTitulo" @bind:event="oninput" />
    </div>
    <div class="col-md-3">
        <label class="form-label fw-bold">Categoria</label>
        <select class="form-select" @bind="filtroCategoriaId">
            <option value="0">Todas as Categorias</option>
            @if (categorias != null)
            {
                @foreach (var cat in categorias)
                {
                    <option value="@cat.CategoriaId">@cat.Nome</option>
                }
            }
        </select>
    </div>
    <div class="col-md-3">
        <label class="form-label fw-bold">Disponibilização</label>
        <select class="form-select" @bind="filtroModoId">
            <option value="0">Todos os Modos</option>
            @if (modos != null)
            {
                @foreach (var m in modos)
                {
                    <option value="@m.ModoDisponibilidadeId">@m.Nome</option>
                }
            }
        </select>
    </div>
    <div class="col-md-2 d-flex align-items-end">
        <button class="btn btn-outline-secondary w-100" @onclick="LimparFiltros">Limpar</button>
    </div>
</div>

@if (produtos == null)
{
    <div class="spinner-border text-primary" role="status"></div>
}
else
{
    <table class="table table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th>Produto</th>
                <th>Preço Base</th>
                <th>Preço Final</th>
                <th>Estado</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in produtosFiltrados)
            {
                <tr>
                    <td>
                        <strong>@p.Titulo</strong><br />
                        <span class="badge bg-info text-dark">@p.CategoriaNome</span>
                        <small class="badge bg-secondary">@p.ModoNome</small>
                    </td>
                    <td>@p.PrecoBase.ToString("C")</td>
                    <td>@p.PrecoFinal.ToString("C")</td>
                    <td>
                        <span class="badge @(p.Estado == "Ativo" ? "bg-success" : "bg-warning text-dark")">@p.Estado</span>
                    </td>
                    <td>
                        <div class="btn-group">
                            <button class="btn btn-outline-primary btn-sm" @onclick="() => PrepararLucro(p)">% Lucro</button>
                            @if (!p.TemVendas)
                            {
                                <button class="btn btn-outline-danger btn-sm" @onclick="() => PrepararEliminar(p)">Apagar</button>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (mostrarModalLucro)
{
    <div class="modal fade show d-block" style="background: rgba(0,0,0,0.5);" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Ajustar Margem: @produtoSelecionado?.Titulo</h5>
                    <button type="button" class="btn-close" @onclick="() => mostrarModalLucro = false"></button>
                </div>
                <div class="modal-body">
                    <label>Percentagem de Lucro (%):</label>
                    <input type="number" class="form-control" @bind="margemInserida" />
                    <p class="mt-2"><small>Preço Base: @produtoSelecionado?.PrecoBase.ToString("C")</small></p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="() => mostrarModalLucro = false">Cancelar</button>
                    <button class="btn btn-primary" @onclick="ConfirmarAjusteLucro">Aplicar e Ativar</button>
                </div>
            </div>
        </div>
    </div>
}

@if (mostrarModalEliminar)
{
    <div class="modal fade show d-block" style="background: rgba(0,0,0,0.5);" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content text-white bg-danger">
                <div class="modal-header border-0">
                    <h5 class="modal-title">Confirmar Eliminação</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="() => mostrarModalEliminar = false"></button>
                </div>
                <div class="modal-body">
                    Tem a certeza que deseja eliminar o produto <strong>@produtoSelecionado?.Titulo</strong>? Esta ação é permanente.
                </div>
                <div class="modal-footer border-0">
                    <button class="btn btn-light" @onclick="() => mostrarModalEliminar = false">Cancelar</button>
                    <button class="btn btn-dark" @onclick="ConfirmarEliminar">Eliminar Agora</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<ProdutoDTO>? produtos;
    private List<Categoria>? categorias;
    private List<ModoDisponibilidade>? modos;

    private string filtroTitulo = "";
    private int filtroCategoriaId = 0;
    private int filtroModoId = 0;

    private bool mostrarModalLucro = false;
    private bool mostrarModalEliminar = false;
    private ProdutoDTO? produtoSelecionado;
    private decimal margemInserida = 20;

    protected override async Task OnInitializedAsync()
    {
        categorias = await DbContext.Categorias.ToListAsync();
        modos = await DbContext.ModosDisponibilidade.ToListAsync();
        await CarregarProdutos();
    }

    private IEnumerable<ProdutoDTO> produtosFiltrados =>
        produtos?.Where(p =>
            (string.IsNullOrWhiteSpace(filtroTitulo) || p.Titulo.Contains(filtroTitulo, StringComparison.OrdinalIgnoreCase)) &&
            (filtroCategoriaId == 0 || p.CategoriaId == filtroCategoriaId) &&
            (filtroModoId == 0 || p.ModoId == filtroModoId)
        ) ?? Enumerable.Empty<ProdutoDTO>();

    private async Task CarregarProdutos()
    {
        produtos = await DbContext.Produtos
            .Include(p => p.ModoDisponibilidade)
            .Include(p => p.Categoria)
            .Select(p => new ProdutoDTO
            {
                ProdutoId = p.ProdutoId,
                Titulo = p.Titulo,
                PrecoBase = p.PrecoBase,
                PrecoFinal = p.PrecoFinal,
                Estado = p.Estado.ToString(),
                CategoriaId = p.CategoriaId,
                CategoriaNome = p.Categoria.Nome,
                ModoId = p.ModoDisponibilidadeId,
                ModoNome = p.ModoDisponibilidade != null ? p.ModoDisponibilidade.Nome : "N/D",
                TemVendas = DbContext.ItensEncomenda.Any(ie => ie.ProdutoId == p.ProdutoId)
            }).ToListAsync();
    }

    private void LimparFiltros()
    {
        filtroTitulo = "";
        filtroCategoriaId = 0;
        filtroModoId = 0;
    }

    private void PrepararLucro(ProdutoDTO p)
    {
        produtoSelecionado = p;
        margemInserida = 20; 
        mostrarModalLucro = true;
    }

    private async Task ConfirmarAjusteLucro()
    {
        if (produtoSelecionado == null) return;

        var produtoBD = await DbContext.Produtos.FindAsync(produtoSelecionado.ProdutoId);
        if (produtoBD != null)
        {
            produtoBD.PrecoFinal = produtoBD.PrecoBase + (produtoBD.PrecoBase * (margemInserida / 100));
            produtoBD.Estado = EstadoProduto.Ativo;
            await DbContext.SaveChangesAsync();
            mostrarModalLucro = false;
            await CarregarProdutos();
        }
    }

    private void PrepararEliminar(ProdutoDTO p)
    {
        produtoSelecionado = p;
        mostrarModalEliminar = true;
    }

    private async Task ConfirmarEliminar()
    {
        if (produtoSelecionado == null) return;

        var p = await DbContext.Produtos.FindAsync(produtoSelecionado.ProdutoId);
        if (p != null)
        {
            DbContext.Produtos.Remove(p);
            await DbContext.SaveChangesAsync();
            mostrarModalEliminar = false;
            await CarregarProdutos();
        }
    }
}