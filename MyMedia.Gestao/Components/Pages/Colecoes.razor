@page "/gestao/colecoes"
@using Microsoft.EntityFrameworkCore
@using MyMedia.Data
@using MyMedia.Data.Models
@inject ApplicationDbContext DbContext
@attribute [Authorize(Roles = "Administrador, Funcionário")]

<div class="container">
    <h3 class="mb-4">Modo Exposição</h3>

    <p class="text-muted">Listagem de itens destinados apenas a exposição.</p>

    @if (itensExposicao == null)
    {
        <div class="spinner-border text-primary" role="status"></div>
    }
    else if (!itensExposicao.Any())
    {
        <div class="alert alert-info">Nenhum item marcado para "Exposição" no catálogo atual.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var p in itensExposicao)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-secondary">
                        <div class="card-header bg-secondary text-white text-center small fw-bold">
                            ITEM DE ACERVO
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@p.Titulo</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@p.Categoria?.Nome</h6>
                            <p class="card-text small">@p.Descricao</p>
                        </div>
                        <div class="card-footer bg-white border-top-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted">Stock: @p.Stock</span>
                                <span class="badge rounded-pill bg-light text-dark border">Indisponível para Venda</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<Produto>? itensExposicao;

    protected override async Task OnInitializedAsync()
    {
        itensExposicao = await DbContext.Produtos
            .Include(p => p.Categoria)
            .Include(p => p.ModoDisponibilidade)
            .Where(p => p.ModoDisponibilidade.Nome == "Exposição")
            .ToListAsync();
    }
}